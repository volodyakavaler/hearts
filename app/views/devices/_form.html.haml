= form_for @device do |f|
  = error_messages_for @device
  .row
    .col-md-4
      .form-group
        = f.label :uid
        = f.text_field :uid, class: 'form-control'
    .col-md-4
      .form-group
        = f.label :name
        = f.text_field :name, class: 'form-control'
    .col-md-2
      .form-group
        = f.label :type_of_device
        = f.text_field :type_of_device, class: 'form-control'
    .col-md-2
      .form-group
        = f.label :write_permission
        = f.select :write_permission, [['Да', true], ['Нет', false]], {include_blank: false}, class: 'custom-select'
  .actions
    = f.submit nil, class: 'btn btn-primary'
