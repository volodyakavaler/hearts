= form_for @device do |f|
  = error_messages_for @device
  .row
    .col-md-6
      .form-group
        = f.label :name
        = f.text_field :name, class: 'form-control'
    .col-md-6
      .form-group
        = f.label :type_of_device
        = f.text_field :type_of_device, class: 'form-control'
  .actions
    = f.submit nil, class: 'btn btn-primary'
