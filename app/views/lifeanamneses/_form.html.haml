= form_for @lifeanamnese do |f|
  = error_messages_for @lifeanamnese
  = f.hidden_field :sick_id, class: 'form-control'
  .row
    .col-md-3
      .form-group
        = f.label :marital_status
        = f.select :marital_status, ["женат/замужем", "неженат/незамужем", "другое"],
          {include_blank: false}, class: 'custom-select'
    .col-md-3
      .form-group
        = f.label :children
        = f.select :children, ["нет", "несовершеннолетние", "совершеннолетние"], {include_blank: false}, class: 'custom-select'
  %p Условия жизни:
  .row
    .col-md-6
      .form-group
        = f.label :job
        = f.text_field :job, class: 'form-control'
    .col-md-3
      .form-group
        = f.label :living_conditions
        = f.select :living_conditions,
          ["квартира", "частный дом"],
          {include_blank: false}, class: 'custom-select'
    .col-md-3
      .form-group
        = f.label :nutrition
        = f.select :nutrition,
          ["регулярное", "нерегулярное"],
          {include_blank: false}, class: 'custom-select'
  %p Вредные привычки:
  .row
    .col-md-3
      .form-group
        = f.label :smoking
        = f.select :smoking,
          ["не курит", "меньше одной пачки в день", "больше 1 пачки в день"],
          {include_blank: false}, class: 'custom-select'
    .col-md-3
      .form-group
        = f.label :alcohol_consumption
        = f.select :alcohol_consumption,
          ["не употребляет", "редко", "часто"],
          {include_blank: false}, class: 'custom-select'
    .col-md-3
      .form-group
        = f.label :drug_use
        = f.select :drug_use,
          ["отрицает", "не отрицает"],
          {include_blank: false}, class: 'custom-select'

  %p Данные о перенесённых заболеваниях:
  .row
    .col-md-12
      .form-group
        = f.label :past_illnesses
        = f.text_area :past_illnesses, class: 'form-control'


  .actions
    = f.submit nil, class: 'btn btn-primary'
